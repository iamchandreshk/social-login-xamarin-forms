<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialLogin.Views.PageLogin">
  <AbsoluteLayout>
    <StackLayout AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All" x:Name="HomeChildContainer">
      <Label x:Name="TextName" VerticalOptions="Center" HorizontalOptions="Center" />
      <Button x:Name="ButtonFacebook" Text="Facebook" Clicked="ButtonFacebook_Clicked" />
      <Button x:Name="ButtonGoogle" Text="Google" Clicked="ButtonGoogle_Clicked" />
    </StackLayout>

    <StackLayout x:Name="StackContainerMain" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All" IsVisible="False">
      <AbsoluteLayout VerticalOptions="FillAndExpand">
        <StackLayout AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All" BackgroundColor="Black" Opacity="0.7" />
        <StackLayout AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All" VerticalOptions="CenterAndExpand" Margin="10" x:Name="StackContainerChild" />
      </AbsoluteLayout>
    </StackLayout>

  </AbsoluteLayout>
</ContentPage>